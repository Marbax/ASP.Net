@using MVCPagination.Models
@model IEnumerable<Category>

@{
    ViewBag.Title = "Categories";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "categories"
    };

}

<h2>Categories</h2>

<div style="margin-top: 50px;">
    @for (int i = 0; i < ViewBag.Pages; i++)
    {
        @Ajax.ActionLink((i + 1).ToString(), "CategoriesTable", "Home", new { id = i + 1 }, options, new { @class = "btn btn-success mx-3"})
    }
</div>

<div id="goods">
    @Html.Action("CategoriesTable")
</div>

