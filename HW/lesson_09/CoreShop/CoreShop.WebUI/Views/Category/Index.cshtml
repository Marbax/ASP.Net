@model IEnumerable<CoreShop.Domain.Entities.Category>

@{
    ViewData["Title"] = "Category";
}

<div class="text-center Message alert-info rounded">@TempData["Message"]</div>

@Html.ActionLink("Create new","CreateNew","Category",new {},new {@class="btn btn-large btn-info m-2"})

<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    @Html.ActionLink("Edit","Edit","Category",new {id=item.CategoryId},new {@class="btn btn-large btn-warning"})
                    @using (Html.BeginForm("Remove","Category",new {id=item.CategoryId},FormMethod.Post,false,new { @class="d-inline"})){
                        <input type="submit" value="Remove" class="btn btn-large btn-danger d-inline">
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

</div>     